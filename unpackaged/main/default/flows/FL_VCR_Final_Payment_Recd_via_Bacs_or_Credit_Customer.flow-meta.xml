    <decisions>
        <name>check_if_deposit_paid_in_full</name>
        <label>check if deposit paid in full</label>
        <locationX>1370</locationX>
        <locationY>59</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Final_Payment_paid_in_full</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>ChoicePaidFullFinalPayment</leftValueReference>
                <operator>WasSelected</operator>
