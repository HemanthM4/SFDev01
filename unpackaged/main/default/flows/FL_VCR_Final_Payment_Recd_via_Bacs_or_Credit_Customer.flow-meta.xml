    <formulas>
        <name>FormulaDetailsUserWhoClickedButtonWithDate</name>
        <dataType>String</dataType>
        <expression>LEFT({!$User.FirstName} &amp; &quot; &quot; &amp; {!$User.LastName} &amp; &quot; Date: &quot; &amp; TEXT({!$Flow.CurrentDateTime}),255)</expression>
    </formulas>
    <formulas>
        <name>FormulaReplaceWorldPayFinalIDBankTransfer</name>
        <dataType>String</dataType>
        <expression>LEFT({!$User.FirstName} &amp; &quot; &quot; &amp; {!$User.LastName} &amp; &quot; bypassed Final payment process as Paid via Bacs&quot; &amp; &quot; Date: &quot; &amp; TEXT({!$Flow.CurrentDateTime}),255)</expression>
    </formulas>
    <formulas>
        <name>FormulaReplaceWorldPayFinalIDCreditCustomerWithDate</name>
        <dataType>String</dataType>
