<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>54.0</apiVersion>
    <environments>Default</environments>
    <formulas>
        <name>var_jobName</name>
        <dataType>String</dataType>
        <expression>TRIM(LEFT( {!$Record.Job_Name_with_Rating_From_MC__c} ,Find(&quot;~&quot;, {!$Record.Job_Name_with_Rating_From_MC__c})-1))</expression>
    </formulas>
    <formulas>
        <name>var_jobRating</name>
        <dataType>String</dataType>
        <expression>TRIM(RIGHT( {!$Record.Job_Name_with_Rating_From_MC__c} ,LEN({!$Record.Job_Name_with_Rating_From_MC__c}) - Find(&quot;~&quot;,{!$Record.Job_Name_with_Rating_From_MC__c})))</expression>
    </formulas>
    <formulas>
        <name>var_RatingNumeric</name>
        <dataType>Number</dataType>
        <expression>VALUE(TRIM(RIGHT( {!$Record.Job_Name_with_Rating_From_MC__c} ,LEN({!$Record.Job_Name_with_Rating_From_MC__c}) - Find(&quot;~&quot;,{!$Record.Job_Name_with_Rating_From_MC__c}))))</expression>
        <scale>2</scale>
    </formulas>
    <interviewLabel>Assign rating to Job from Contact via MC {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Assign rating to Job from Contact via MC</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>Update_Related_Job</name>
        <label>Update Related Job</label>
        <locationX>176</locationX>
        <locationY>335</locationY>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Name</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>var_jobName</elementReference>
            </value>
        </filters>
        <inputAssignments>
            <field>Rating__c</field>
            <value>
                <elementReference>var_RatingNumeric</elementReference>
            </value>
        </inputAssignments>
        <object>Job__c</object>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Update_Related_Job</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Job_Name_with_Rating_From_MC__c</field>
            <operator>IsChanged</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <filters>
            <field>Job_Name_with_Rating_From_MC__c</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <object>Contact</object>
        <recordTriggerType>Update</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
