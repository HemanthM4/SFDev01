<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Site_Address_Required</fullName>
    <active>false</active>
    <description>Checks the site address is not blank</description>
    <errorConditionFormula>AND(
Same_as_site_address__c = FALSE, ISBLANK( ShippingAddress)
)</errorConditionFormula>
    <errorMessage>Site Address is required</errorMessage>
</ValidationRule>
